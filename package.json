{
  "name": "radishes",
  "version": "2.0.0-alpha.1",
  "private": true,
  "main": "./background.js",
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "test": "lerna run test --stream",
    "test:unit": "vue-cli-service test:unit",
    "test:open": "cypress open",
    "test:run": "cypress run",
    "lint": "vue-cli-service lint && stylelint \"src/**/*.{css,less}\"",
    "lint:prettier": "prettier --write --loglevel warn \"src/**/*.{js,json,tsx,css,less}\"",
    "lint:style": "stylelint --fix \"src/**/*.{css,less}\" --cache --cache-location node_modules/.cache/stylelint/",
    "build": "cross-env NODE_ENV=production vue-cli-service build --mode browser --modern",
    "build:storybook": "build-storybook",
    "build:electron": "vue-cli-service electron:build --mode electron.build --win nsis",
    "build:api": "concurrently -r \"yarn dev:api\" \"node script/server-local.js\"",
    "dev": "concurrently -r \"yarn dev:api\" \"yarn generate:theme\" \"cross-env NODE_ENV=development vue-cli-service serve --mode browser\"",
    "dev:api": "lerna exec --scope @radishes/api -- yarn run dev",
    "dev:electron": "concurrently -r \"yarn dev:api\" \"yarn generate:theme\" \"vue-cli-service electron:serve --mode electron.dev\"",
    "dev:analyzer": "cross-env ANALYZER=analyzer vue-cli-service serve --mode browser",
    "generate:theme": "node ./script/theme.js",
    "postinstall": "electron-builder install-app-deps",
    "postuninstall": "electron-builder install-app-deps",
    "log": "conventional-changelog -p eslint -i CHANGELOG.md -s -r 0",
    "electron:generate-icons": "electron-icon-builder --input=./public/icon.png --output=build --flatten",
    "svgo": "svgo -f ./src/assets/svg",
    "storybook": "start-storybook -p 6006"
  },
  "gitHooks": {
    "pre-commit": "lint-staged"
  },
  "husky": {
    "hooks": {
      "commit-msg": "yarn lint && commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "license": "MIT",
  "lint-staged": {
    "*.{js,jsx,vue,ts,tsx}": [
      "vue-cli-service lint",
      "git add"
    ],
    "*.{css,less}": [
      "stylelint \"src/**/*.{css,less}\"",
      "git add"
    ]
  },
  "workspaces": [
    "packages/*"
  ],
  "dependencies": {
    "core-js": "^3.6.5",
    "vue": "^3.0.2",
    "vue-router": "^4.0.0-0",
    "vuex": "^4.0.0-0"
  },
  "devDependencies": {
    "@babel/core": "^7.11.6",
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "^11.0.0",
    "@storybook/addon-actions": "^6.0.22",
    "@storybook/addon-essentials": "^6.0.22",
    "@storybook/addon-links": "^6.0.22",
    "@storybook/vue": "^6.0.22",
    "@types/chai": "^4.2.11",
    "@types/classnames": "^2.2.10",
    "@types/electron-devtools-installer": "^2.2.0",
    "@types/file-saver": "^2.0.1",
    "@types/js-cookie": "^2.2.6",
    "@types/md5": "^2.2.1",
    "@types/mocha": "^5.2.4",
    "@types/scriptjs": "^0.0.2",
    "@typescript-eslint/eslint-plugin": "^2.33.0",
    "@typescript-eslint/parser": "^2.33.0",
    "@vue/cli-plugin-babel": "~4.5.0",
    "@vue/cli-plugin-eslint": "~4.5.0",
    "@vue/cli-plugin-router": "~4.5.0",
    "@vue/cli-plugin-typescript": "~4.5.0",
    "@vue/cli-plugin-unit-mocha": "~4.5.0",
    "@vue/cli-plugin-vuex": "~4.5.0",
    "@vue/cli-service": "~4.5.0",
    "@vue/compiler-sfc": "^3.0.0-0",
    "@vue/eslint-config-prettier": "^6.0.0",
    "@vue/eslint-config-typescript": "^5.0.2",
    "@vue/test-utils": "^2.0.0-0",
    "ant-design-vue": "2.0.0-rc.2",
    "axios": "^0.20.0",
    "babel-loader": "^8.1.0",
    "babel-plugin-import": "^1.13.1",
    "chai": "^4.1.2",
    "chai-as-promised": "^7.1.1",
    "chalk": "^4.1.0",
    "classnames": "^2.2.6",
    "concurrently": "^5.3.0",
    "conventional-changelog-cli": "^2.1.1",
    "cross-env": "^7.0.2",
    "cypress": "^6.2.0",
    "dayjs": "^1.9.4",
    "electron": "^11.1.1",
    "electron-builder": "^22.9.1",
    "electron-devtools-installer": "^3.1.0",
    "electron-icon-builder": "^1.0.2",
    "eslint": "^6.7.2",
    "eslint-plugin-prettier": "^3.1.3",
    "eslint-plugin-vue": "^7.0.0-0",
    "express": "^4.17.1",
    "file-saver": "^2.0.5",
    "http-proxy-middleware": "^1.0.6",
    "husky": "^4.3.0",
    "js-cookie": "^2.2.1",
    "lerna": "^3.22.1",
    "less": "^3.0.4",
    "less-loader": "^5.0.0",
    "lint-staged": "^9.5.0",
    "lodash": "^4.17.20",
    "md5": "^2.3.0",
    "prettier": "^1.19.1",
    "react-is": "^16.13.1",
    "scriptjs": "^2.5.9",
    "spectron": "^12.0.0",
    "stylelint": "^13.7.2",
    "stylelint-config-prettier": "^8.0.2",
    "stylelint-config-recess-order": "^2.3.0",
    "stylelint-config-standard": "^20.0.0",
    "stylelint-order": "^4.1.0",
    "stylelint-prettier": "^1.1.2",
    "svgo": "^1.3.2",
    "ts-loader": "^8.0.6",
    "typescript": "^4.0.3",
    "url-loader": "^4.1.1",
    "v-easy-components": "2.0.0-beta.14",
    "vant": "^3.0.0-beta.7",
    "vue-cli-plugin-electron-builder": "^2.0.0-rc.5",
    "vuex-persistedstate": "^4.0.0-beta.1",
    "webpack-bundle-analyzer": "4.3.0"
  }
}
